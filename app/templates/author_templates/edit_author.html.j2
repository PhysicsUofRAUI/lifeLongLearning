{% extends "base.html.j2" %}
{% from "_form_macros.html" import render_field %}
{% block title %}
        {{ Title }}
{% endblock %}
{% block body %}
<div class="content-section">
 <div class="outer">
    <div class="middle">
      <div class="inner">
        <div class="center">
          <form action="{{ url_for('author.edit_author', id=author.id) }}" method="post" enctype="multipart/form-data">
            {{ form.csrf_token }}
            <dl>
              {{ render_field(form.name) }}
              {{ render_field(form.email) }}
              {{ render_field(form.password) }}
              {{ render_field(form.submit) }}
            </dl>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
